{
  "name": "ts-chrome-layout",
  "version": "0.1.0",
  "description": "TypeScript implementation of Chromium Layout Engine - Complete layout calculation system supporting Grid, Flex, Block, Inline and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "dev": "tsc -p tsconfig.build.json --watch",
    "clean": "rimraf dist coverage .tsbuildinfo",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:ci": "eslint src --ext .ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc -p tsconfig.test.json --noEmit",
    "validate": "npm run type-check && npm run lint:ci && npm run format:check",
    "prepublishOnly": "npm run clean && npm run build && npm run test:ci",
    "precommit": "npm run validate",
    "ci": "npm run validate && npm run test:ci"
  },
  "keywords": [
    "layout",
    "layout-engine",
    "chromium",
    "typescript",
    "css-grid",
    "flexbox",
    "block-layout",
    "inline-layout",
    "browser-layout",
    "layout-algorithm"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

